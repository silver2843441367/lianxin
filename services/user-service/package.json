{
  "name": "lianxin-user-service",
  "version": "1.0.0",
  "description": "User management microservice for Lianxin social media platform",
  "main": "src/app.js",
  "scripts": {
    "start": "node src/app.js",
    "dev": "nodemon src/app.js",
    "migrate": "node -e \"console.log('Run migrations manually or use Sequelize CLI')\"",
    "seed": "node -e \"console.log('Run seeds manually or use Sequelize CLI')\"",
    "test": "jest",
    "test:unit": "jest --testPathPattern=tests/unit",
    "test:integration": "jest --testPathPattern=tests/integration",
    "test:e2e": "jest --testPathPattern=tests/e2e",
    "test:coverage": "jest --coverage",
    "lint": "eslint src/",
    "lint:fix": "eslint src/ --fix",
    "format": "prettier --write src/",
    "docker:build": "docker build -t user-service .",
    "docker:run": "docker run -p 3001:3001 user-service",
    "docker:test": "docker-compose -f docker-compose.test.yml up -d"
  },
  "dependencies": {
    "amqplib": "^0.10.3",
    "axios": "^1.4.0",
    "bcrypt": "^5.1.0",
    "bunyan": "^1.8.15",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dompurify": "^3.0.3",
    "dotenv": "^16.1.4",
    "express": "^4.18.2",
    "express-rate-limit": "^6.7.0",
    "express-validator": "^6.15.0",
    "helmet": "^6.1.5",
    "joi": "^17.9.2",
    "jsdom": "^22.1.0",
    "jsonwebtoken": "^9.0.0",
    "libphonenumber-js": "^1.10.30",
    "luxon": "^3.7.1",
    "moment": "^2.29.4",
    "multer": "^2.0.2",
    "mysql2": "^3.3.3",
    "node-cron": "^3.0.2",
    "redis": "^4.6.7",
    "sequelize": "^6.31.1",
    "sharp": "^0.34.3",
    "uuid": "^9.0.0",
    "validator": "^13.9.0",
    "winston": "^3.8.2",
    "xss": "^1.0.14"
  },
  "devDependencies": {
    "eslint": "^8.57.1",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-plugin-import": "^2.27.5",
    "jest": "^29.5.0",
    "nodemon": "^2.0.22",
    "sequelize-cli": "^6.6.1",
    "supertest": "^7.1.4"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "keywords": [
    "social-media",
    "user-service",
    "microservice",
    "nodejs",
    "express",
    "mysql",
    "redis",
    "jwt",
    "china-compliance"
  ],
  "author": "Lianxin Development Team",
  "license": "PROPRIETARY"
}
